<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_red_to_blue_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  头部  -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="1dp"
        android:background="@drawable/background_red_to_blue_horizontal"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--  时间  -->
        <TextView
            android:id="@+id/timer_field"
            android:layout_marginTop="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:gravity="center"
            android:text="@string/default_time"
            android:textStyle="bold"
            android:textSize="54sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--  角色  -->
        <LinearLayout
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/red_side_field"
                android:maxLines="1"
                android:textSize="21sp"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:text="红方"
                android:selectAllOnFocus="true"
                android:background="@android:color/transparent"
                tools:textColor="@android:color/white"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/vs"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textSize="21sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/blue_side_field"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="21sp"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:text="蓝方"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                tools:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!--  计分区域  -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:orientation="vertical"
            android:background="@drawable/background_red_to_blue_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/colorRedSide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_sub_red"
                        app:fabSize="mini"
                        app:elevation="0dp"
                        android:src="@drawable/ic_navigate_before_black_24dp"
                        android:layout_centerInParent="true"
                        app:backgroundTint="@color/colorBlueSide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:id="@+id/red_score_field"
                    android:gravity="center"
                    android:textSize="72sp"
                    android:text="@string/default_score"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_plus_red"
                        app:fabSize="mini"
                        app:elevation="0dp"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:layout_centerInParent="true"
                        app:backgroundTint="@color/colorBlueSide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blue_area"
                android:paddingBottom="32dp"
                android:orientation="horizontal"
                android:background="@color/colorBlueSide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_sub_blue"
                        app:fabSize="mini"
                        app:elevation="0dp"
                        android:src="@drawable/ic_navigate_before_black_24dp"
                        android:layout_centerInParent="true"
                        app:backgroundTint="@color/colorRedSide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/blue_score_field"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:gravity="center"
                    android:textSize="72sp"
                    android:text="@string/default_score"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_plus_blue"
                        app:fabSize="mini"
                        app:elevation="0dp"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:layout_centerInParent="true"
                        app:backgroundTint="@color/colorRedSide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action"
            app:layout_anchor="@id/blue_area"
            app:layout_anchorGravity="end"
            android:layout_marginEnd="-88dp"
            app:fabSize="auto"
            app:elevation="0dp"
            android:layout_width="176dp"
            android:layout_height="176dp"/>

        <ImageView
            android:id="@+id/fab_icon"
            android:translationZ="99dp"
            android:layout_marginEnd="-8dp"
            app:layout_anchor="@id/blue_area"
            app:layout_anchorGravity="end"
            android:src="@drawable/ic_play"
            android:layout_width="68dp"
            android:layout_height="88dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>